mainHeight = 18000px
colorBlue = #0b4a80

body
    // font-family: "微软雅黑"
    background-color: #cccccc
    color: #333;
    min-width 1200px
    padding: 0
    margin: 0

.ie
    body
        font-family: "微软雅黑"

.clearfix
    &:after
        content: ''
        clear both
        width: 100%
        height 0
        overflow hidden
        display: inline-block

.btn
    position: relative;
    display: inline-block;
    padding: 6px 12px;
    font-size: 14px;
    font-weight: 600;
    line-height: 20px;
    white-space: nowrap;
    vertical-align: middle;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    background-repeat: repeat-x;
    background-position: -1px -1px;
    background-size: 110% 110%;
    border: 1px solid rgba(27,31,35,0.2);
    border-radius: 0.25em;
    -webkit-appearance: none;
    appearance: none;
    background-color: #fafbfc;
    background-image: linear-gradient(-180deg, #fafbfc 0%, #eff3f6 90%);
    // &-upload
        // width: 200px
        // color: #cb2431;

    a
        // text-decoration: none
        color #ffffff

.hide
.heb-hide
    display: none

.btn-primary
    color: #fff;
    background-color: #28a745;
    background-image: linear-gradient(-180deg, #34d058 0%, #28a745 90%);

.upload-box
    text-align: center
    padding: 20px
    border-top: 1px #cccccc solid
    margin: 0 auto

.is-mask
    .heb
        &-box
            background-color: rgba(#000000, 0.2)
            box-shadow: 0 10px 60px rgba(#000000, 0.2)

.add-mask
.copy-btn
.clear-btn
    position: fixed
    right: 0
    bottom: 0
    z-index: 999

.copy-btn
    margin-bottom: 40px

.clear-btn
    top: 0
    bottom: auto
    // display: none
    width: auto

    .is-dev & 
        display: block


.add-href
    &-input
    &-btn
        position: absolute
        width: 100%
        height 100%
        z-index 10
        top: 0
        left: 0

    &-text
    &-base
        min-width: 90%
        position: absolute
        z-index 12
        top: 20px
        left: 50%
        transform: translate(-50%, 0)
        margin: 0 auto
        cursor: auto
        font-weight: 400
        display block

    &-base
        min-width: 80%
        display inline-block
        color: #ffffff
        z-index 12
        padding: 6px 0;
        font-size: 16px;
        line-height: 20px;

    &-text2
        min-width: 10%
        display inline-block
        margin-left: 72px
        padding-left: 2px
        z-index 13

    &-btn
        z-index 11
        background-color: rgba(#000000, 0.3)
        cursor pointer
        border: colorBlue 1px solid

.heb

    &-bg-iframe
        width: 100%
        height mainHeight
        margin: 0 auto
        position: absolute
        left: 50%
        top: 0

    &-box
        position: absolute
        z-index: 999
        margin: 0 auto
        top: 0
        left 0
        width: 100%
        height mainHeight
        // background-color: rgba(#000000, 0.1)

    &-box-in
        position: absolute
        margin: 0 auto
        width: 1200px
        top: 210px
        left: 50%
        margin-left: -(@width / 2)
        // height 300px
        // background-color: rgba(#000000, 0.3)

    &-main-box
        width: 951px
        padding: 0 49px
        position: absolute
        right 0
        top: 0
        // background-color: rgba(#000000, 0.3)
        // height 400px

    &-main
        background-color: #ffffff //rgba(#ffffff, 0.6)
        // height 5503px
        padding-bottom: 80px

        .title-box
            font-size: 32px
            font-weight: 700
            line-height: 45px
            padding-bottom: 30px
            text-align: center
            display: flex
            justify-content: center
            flex-wrap: wrap
            cursor: default
        .i
            outline: none
            text-align: left
            cursor: text

            &:hover
                border-bottom: 1px solid orange
                color: orange

        .title
        .i
        .year
        .month
        .day
        .stage
        .add-title
            display: flex
            justify-content: center

        .add-title
            min-width: 0.5em
            text-align: left
            // &:hover
            //     border-bottom: 1px solid colorBlue
            //     color: colorBlue
    &-pic
        p
            margin: 0
            position relative
            // &:hover:after
            //     content: ''
            //     width: 100%
            //     height 100%
            //     position: absolute
            //     z-index: 2
            //     background-color: rgba(#000000, 0.2)
            //     top: 0
            //     left: 0
            //     img
            //         border: 1px solid orange
                    
    &-tips
        width: 60%
        position: fixed
        top: 50%
        left 50%
        transform: translate(-50%, -50%)
        text-align: center
        font-size: 30px
        line-height: 40px
        padding: 40px
        clear both
        z-index 999
        color: red
        border-color: red

    &-main-tips
    &-alert-tips
        border: 1px solid rgba(27,31,35,0.2);
        border-radius: 0.25em;
        background-color: #fafbfc;
        width: 52%
        margin: 30px auto 0
        font-size: 14px
        line-height: 24px
        padding: 20px 40px 30px

        code
            background-color: #f0f0f0
            padding: 0 4px
            line-height: 20px
            border-radius: 2px
            color: orange
            display: inline-flex
        
        a
            color: lightblue

    &-alert-tips
        padding: 20px 40px
        margin-bottom: 20px
        color: red
        border-color: red

    &-print-tips
        display: flex
        padding: 0
        margin 0
        list-style: none
        flex-wrap: wrap
        justify-content: space-between
        
        li
            width: 46%
            padding: 0
            margin: 6px
            text-align: center
            line-height: 20px
            font-size: 14px
        a
            color: orange
            &:hover
                color: blue
            img
                border: 1px solid rgba(27,31,35,0.2);
                &:hover
                    border-color: orange
                    box-shadow: 0 3px 20px rgba(27,31,35,0.2);

